@model IEnumerable<AppUser>
@{
	
}
<a class="btn btn-danger" asp-controller="Account" asp-action="Create">Create User</a>
<hr />

<table id="userTable" class="table table-sm table-bordered">
	<thead>
	<tr>
		<th>Id</th>
		<th>FullName</th>
		<th>Email</th>
		<th>Action</th>
	</tr>
	</thead>
	<tbody>
	@if (!Model.Any())
	{
		<tr>
			<td colspan="4" class="text-center">No data available</td>
		</tr>
	}
	else
	{
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.Id</td>
				<td>@user.FullName</td>
				<td>@user.Email</td>
				<td>
					<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-dark btn-sm">Edit</a>
					<form asp-action="Delete" method="post" onsubmit="return confirm('Emin misiniz?')" style="display:inline-block">
						<input type="hidden" value="@user.Id" name="id" />
						<button type="submit" class="btn btn-danger btn-sm" name="deleteButton">Delete</button>
					</form>
				</td>
			</tr>
		}
	}
	</tbody>
</table>

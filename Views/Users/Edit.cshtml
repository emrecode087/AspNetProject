@model EditViewModel

<h2 class="h5 text-danger">Edit User</h2>
<hr />
<form asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-dark"></div>
	<input  type="hidden" name="Id" value="@Model.Id" />
	<div class="mb-3">
		<label asp-for="FullName"></label>
		<input asp-for="FullName" class="form-control" />
	</div>
	<div class="mb-3">
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control" />
	</div>
	<div class="card">
		<div class="card-body">
			<div class="card-header bg-white">
				<h5 class="card-title text-danger">Change Password</h5>
			</div>
		</div>
		<div class="mb-3">
			<label class="ml-3" asp-for="Password"></label>
			<input asp-for="Password" class="form-control" />
		</div>
		<div class="mb-3">
			<label class="ms-auto" asp-for="ConfirmPassword"></label>
			<input asp-for="ConfirmPassword" class="form-control" />
		</div>
	</div>
	<div class="card">
		<div class=" card-body">
			<div class="card-header bg-white">
				<h5 class="card-title text-danger">Roles</h5>
			</div>
		</div>
		

		<div class="card-body mb-3">
			@foreach (var role in ViewBag.Roles)
			{
				<div class="form-check">
					<input type="checkbox"
					       class="form-check-input"
					       name="SelectedRoles"
					       value="@role"
					       id="@role"
					       @if (Model.SelectedRoles != null)
					       {
						       @(Model.SelectedRoles.Any(i => i == role) ? "checked" : "")
					       }>
					<label for="@role" class="form-check-label">@role</label>
				</div>
			}
		</div>
	</div>
	<hr />
	<button type="submit" class="btn btn-danger">Save</button>
</form>
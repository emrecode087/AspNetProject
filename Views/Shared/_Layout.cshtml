<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.datatables.net/2.1.2/css/jquery.dataTables.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />

	<title>@ViewData["Title"] - My ASP.NET Application</title>
</head>

<body>
<div>
	<header>
		@await Html.PartialAsync("_Navbar")
		@RenderSection("Header", false)
	</header>
	<div class="container mt-3">
		<main>
			@RenderBody()
		</main>
	</div>
</div>

<!-- jQuery ve DataTables JavaScript dosyalarını burada yükleyelim -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.datatables.net/2.1.2/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/2.1.2/js/dataTables.bootstrap4.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

@RenderSection("Scripts", required: false)
</body>
</html>